<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/title_bg"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/lay_title_left"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
             />
        <LinearLayout
            android:id="@+id/lay_title_left_by_icon_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone"
             >
              <ImageView 
            android:id="@+id/img_title_left_by_icon_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            />
        <TextView
            android:id="@+id/txt_title_left_by_icon_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="已认证"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"/>
            
            
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_title_center"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_title_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"          
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large"
            android:text="@string/app_name"
             />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_title_right"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView 
            android:id="@+id/img_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
           	android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/txt_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"/>
    </LinearLayout>

</LinearLayout>