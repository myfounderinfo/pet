<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="20dp"
        >


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/add_friend_iv"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/add_pet_cirle_info" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/content_info_layout"
            android:background="@drawable/bg_pet_cirle_title" >

             <FrameLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
     >
       <TextView
                android:id="@+id/friend_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:singleLine="true"
                android:text="好友"
                android:textColor="#222222"
                android:textSize="@dimen/text_size_medium" />

         
       <ImageView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_margin="5dp"
         android:visibility="gone"
         android:src="@drawable/plus_iv"
         android:layout_gravity="right|top"
         /> 
        </FrameLayout>
        
            <TextView
                android:id="@+id/hot_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="热门"
                 android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#222222"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/tv_near"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="附近"
                android:textColor="#222222"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>
        
    </RelativeLayout>
    
    
    
<FrameLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    android:orientation="vertical" >
      <ListView
        android:id="@+id/listview"
        android:listSelector="#00ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/bg_main"
        android:dividerHeight="1dip"
        android:cacheColorHint="@color/bg_main"
         >
    </ListView>
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="bottom"
    android:background="#77ffffff"
     >
      <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center" 
    android:id="@+id/pet_cirle_layout"
    android:layout_weight="1"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >
            <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pet_cirle_d"
        android:layout_margin="5dp"
        android:id="@+id/pet_cirle_iv"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="14sp"
                android:id="@+id/pet_cirle_tv"
                android:layout_gravity="center"
                android:text="狗狗圈"
                />
          </LinearLayout>
           <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center" 
    android:layout_weight="1"
    android:id="@+id/pet_help_layout"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >
            <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tab2"
        android:layout_margin="5dp"
        android:id="@+id/pet_help_iv"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />
             <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="14sp"
                android:id="@+id/pet_help_tv"
                android:layout_gravity="center"
                android:text="呼救"
                />
          </LinearLayout>
           <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center" 
    android:layout_weight="1"
    android:id="@+id/pet_chat_layout"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >
            <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tab3"
        android:layout_margin="5dp"
        android:id="@+id/pet_chat_iv"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />
             <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="14sp"
                android:id="@+id/pet_chat_tv"
                android:layout_gravity="center"
                android:text="聊天"
                />
          </LinearLayout>
          <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center" 
    android:layout_weight="1"
    android:id="@+id/pet_set_layout"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >
            <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tab4"
        android:layout_margin="5dp"
        android:id="@+id/pet_set_iv"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />
             <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="14sp"
                android:id="@+id/pet_set_tv"
                android:layout_gravity="center"
                android:text="设置"
                />
          </LinearLayout>
    </LinearLayout>
        </FrameLayout>
</LinearLayout>